<Window
    x:Class="DEDSEC.WPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:components="clr-namespace:DEDSEC.WPF.Components"
    xmlns:modal="clr-namespace:ModalControl;assembly=ModalControl"
    xmlns:viewmodels="clr-namespace:DEDSEC.WPF.ViewModels"
    Width="1080"
    Height="720"
    AllowsTransparency="True"
    Background="Transparent"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None">
    <Border
        Background="#eff2f7"
        CornerRadius="30"
        MouseDown="Border_MouseDown"
        MouseLeftButtonDown="Border_MouseLeftButtonDown">
        <Grid>
            <Grid.Resources>
                <DataTemplate DataType="{x:Type viewmodels:AccountViewModel}">
                    <components:AccountComponent />
                </DataTemplate>

                <DataTemplate DataType="{x:Type viewmodels:EditAccountViewModel}">
                    <components:EditAccountComponent />
                </DataTemplate>

                <DataTemplate DataType="{x:Type viewmodels:HomeViewModel}">
                    <components:HomeComponent />
                </DataTemplate>

                <DataTemplate DataType="{x:Type viewmodels:LoginViewModel}">
                    <components:LoginComponent />
                </DataTemplate>

                <DataTemplate DataType="{x:Type viewmodels:LayoutViewModel}">
                    <components:LayoutComponent />
                </DataTemplate>

                <DataTemplate DataType="{x:Type viewmodels:MeetingListingViewModel}">
                    <components:MeetingListingComponent />
                </DataTemplate>

                <DataTemplate DataType="{x:Type viewmodels:AddMeetingViewModel}">
                    <components:AddMeetingComponent />
                </DataTemplate>

                <DataTemplate DataType="{x:Type viewmodels:PlayerListingViewModel}">
                    <components:PlayerListingComponent />
                </DataTemplate>

                <DataTemplate DataType="{x:Type viewmodels:GameListingViewModel}">
                    <components:GameListingComponent />
                </DataTemplate>

                <DataTemplate DataType="{x:Type viewmodels:AddGameViewModel}">
                    <components:AddGameComponent />
                </DataTemplate>

                <DataTemplate DataType="{x:Type viewmodels:DonationGoalViewModel}">
                    <components:DonationGoalComponent />
                </DataTemplate>

                <DataTemplate DataType="{x:Type viewmodels:AddDonationViewModel}">
                    <components:AddDonationComponent />
                </DataTemplate>
            </Grid.Resources>
            <modal:Modal Panel.ZIndex="1" IsOpen="{Binding IsOpen}">
                <ContentControl Content="{Binding CurrentModalViewModel}" />
            </modal:Modal>
            <ContentControl Content="{Binding CurrentViewModel}" />
        </Grid>
    </Border>
</Window>
