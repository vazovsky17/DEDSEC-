<UserControl
    x:Class="DEDSEC.WPF.Components.AccountComponent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:components="clr-namespace:DEDSEC.WPF.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DEDSEC.WPF.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <components:NavigationComponent Grid.Row="0" DataContext="{Binding NavigationBarViewModel}" />
        <Grid
            Grid.Row="1"
            MaxWidth="1000"
            Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>


            <TextBlock
                Grid.Row="0"
                FontSize="28"
                Text="Account" />

            <TextBlock
                Grid.Row="1"
                Margin="0,20,0,0"
                Text="{Binding Nickname}" />

            <Button
                Grid.Row="2"
                Margin="0,20,0,0"
                Padding="5,2"
                HorizontalAlignment="Left"
                Command="{Binding NavigateHomeCommand}"
                Content="Home" />
        </Grid>
    </Grid>
</UserControl>
