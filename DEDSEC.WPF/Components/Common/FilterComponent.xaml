<UserControl
    x:Class="DEDSEC.WPF.Components.FilterComponent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>
    <Grid Width="200" Margin="20">
        <TextBlock
            Margin="15,0"
            VerticalAlignment="Center"
            Panel.ZIndex="1"
            Foreground="{StaticResource ColorTextBoxHint}"
            IsHitTestVisible="False"
            Text="Искать среди игроков ..."
            Visibility="{Binding ElementName=textBoxFilter, Path=Text.IsEmpty, Converter={StaticResource BooleanToVisibilityConverter}}" />
        <TextBox x:Name="textBoxFilter" Style="{StaticResource textBoxFilter}" />
    </Grid>
</UserControl>
