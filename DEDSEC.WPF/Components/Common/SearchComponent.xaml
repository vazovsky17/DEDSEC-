<UserControl
    x:Class="DEDSEC.WPF.Components.SearchComponent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:icon="http://metro.mahapps.com/winfx/xaml/iconpacks">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>
    <Grid Width="300" Margin="20">
        <TextBlock
            Margin="20,0"
            VerticalAlignment="Center"
            Panel.ZIndex="1"
            Foreground="{StaticResource ColorTextBoxHint}"
            IsHitTestVisible="False"
            Text="Искать здесь..."
            Visibility="{Binding ElementName=textBoxSearch, Path=Text.IsEmpty, Converter={StaticResource BooleanToVisibilityConverter}}" />
        <TextBox x:Name="textBoxSearch" Style="{StaticResource textBoxSearch}" />
        <icon:PackIconMaterial
            Width="16"
            Height="16"
            Margin="0,0,16,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Foreground="#b0b9c6"
            Kind="Magnify" />
    </Grid>
</UserControl>
