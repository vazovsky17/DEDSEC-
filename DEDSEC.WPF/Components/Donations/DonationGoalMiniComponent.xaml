<UserControl
    x:Class="DEDSEC.WPF.Components.DonationGoalMiniComponent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:icon="http://metro.mahapps.com/winfx/xaml/iconpacks">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>
    <Border
        Width="200"
        MinHeight="200"
        Padding="0,0,0,24"
        Background="{StaticResource ColorMouseOverBackground}"
        CornerRadius="30" >
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <TextBlock Style="{StaticResource textBlockTitleMiniComponent}" Grid.Row="0" Text="Цель" Margin="16 16 4 0" HorizontalAlignment="Left"/>
            <Button Style="{StaticResource topButton}" Grid.Row="0" HorizontalAlignment="Right" Margin="4 16 16 0" Visibility="{Binding IsAdmin, Converter={StaticResource BooleanToVisibilityConverter}}">
                <icon:PackIconMaterial Foreground="{StaticResource ColorButtonForeground}" Kind="Plus"/>
            </Button>
            <TextBlock Grid.Row="1" Text="{Binding Title}" Foreground="{StaticResource ColorTextForeground}"/>
        </Grid>
    </Border>
</UserControl>
