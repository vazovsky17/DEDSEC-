<UserControl
    x:Class="DEDSEC.WPF.Components.Donations.AddDonationGoalComponent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:donations_comp="clr-namespace:DEDSEC.WPF.Components.Donations">
    <Grid Width="400" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock
            Grid.Row="0"
            Margin="20"
            Style="{StaticResource textBlockTitle}"
            Text="Добавить донатную цель" />
        <donations_comp:DonationGoalFormComponent Grid.Row="1" DataContext="{Binding DonationGoalFormViewModel}" />
    </Grid>
</UserControl>
