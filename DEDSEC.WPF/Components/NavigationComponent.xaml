<UserControl
    x:Class="DEDSEC.WPF.Components.NavigationComponent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DEDSEC.WPF.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <TextBlock Text="{TemplateBinding Content}" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <TextBlock Text="{TemplateBinding Content}" TextDecorations="Underline" />
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>
    <Grid MaxWidth="1000" Margin="20,10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>

        <TextBlock
            Grid.Column="0"
            FontSize="28"
            Foreground="DarkSlateGray"
            Text="DEDSEC" />

        <Button
            Grid.Column="1"
            Margin="10,0,0,0"
            Command="{Binding NavigateHomeCommand}"
            Content="Главная" />

        <Button
            Grid.Column="2"
            Margin="10,0,0,0"
            Command="{Binding NavigateLoginCommand}"
            Content="Войти"
            Visibility="{Binding IsUnlogged, Converter={StaticResource BooleanToVisibilityConverter}}" />

        <Button
            Grid.Column="3"
            Margin="10,0,0,0"
            Command="{Binding NavigateAccountCommand}"
            Content="Аккаунт"
            Visibility="{Binding IsLoggedIn, Converter={StaticResource BooleanToVisibilityConverter}}" />

        <Button
            Grid.Column="4"
            Margin="10,0,0,0"
            Command="{Binding NavigateGameListingCommand}"
            Content="Игры"
            Visibility="{Binding IsLoggedIn, Converter={StaticResource BooleanToVisibilityConverter}}" />

        <Button
            Grid.Column="5"
            Margin="10,0,0,0"
            Command="{Binding NavigateMeetingListingCommand}"
            Content="Сходки"
            Visibility="{Binding IsLoggedIn, Converter={StaticResource BooleanToVisibilityConverter}}" />

        <Button
            Grid.Column="6"
            Margin="10,0,0,0"
            Command="{Binding NavigatePlayerListingCommand}"
            Content="Игроки"
            Visibility="{Binding IsLoggedIn, Converter={StaticResource BooleanToVisibilityConverter}}" />
        
        <Button
            Grid.Column="6"
            Margin="10,0,0,0"
            Command="{Binding NavigateDonationGoalCommand}"
            Content="Донаты"
            Visibility="{Binding IsLoggedIn, Converter={StaticResource BooleanToVisibilityConverter}}" />
        
        <Button
            Grid.Column="8"
            Margin="10,0,0,0"
            Command="{Binding LogoutCommand}"
            Content="Выйти"
            Visibility="{Binding IsLoggedIn, Converter={StaticResource BooleanToVisibilityConverter}}" />
    </Grid>
</UserControl>
