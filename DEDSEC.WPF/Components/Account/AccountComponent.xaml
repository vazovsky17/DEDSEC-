<UserControl
    x:Class="DEDSEC.WPF.Components.AccountComponent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:components="clr-namespace:DEDSEC.WPF.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DEDSEC.WPF.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <TextBlock
            Grid.Row="0"
            FontSize="28"
            Text="Account" />

        <TextBlock
            Grid.Row="1"
            Margin="0,20,0,0"
            Text="{Binding Nickname}" />

        <TextBlock
            Grid.Row="2"
            Margin="0,20,0,0"
            Text="{Binding Name}" />
        
        <TextBlock
            Grid.Row="3"
            Margin="0,20,0,0"
            Text="{Binding Age}" />

        <TextBlock
            Grid.Row="4"
            Margin="0,20,0,0"
            Text="{Binding AboutMe}" />

        <TextBlock
            Grid.Row="5"
            Margin="0,20,0,0"
            Text="{Binding IsVisited}" />
    </Grid>
</UserControl>
