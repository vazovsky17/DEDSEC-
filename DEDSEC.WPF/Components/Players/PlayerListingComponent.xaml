<UserControl
    x:Class="DEDSEC.WPF.Components.PlayerListingComponent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <TextBlock FontSize="28" Text="Игроки" />
        </StackPanel>

        <ListView
            Grid.Row="1"
            Margin="0,20,0,0"
            ItemsSource="{Binding Players}">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Name}" Header="Имя" />
                    <GridViewColumn DisplayMemberBinding="{Binding Age}" Header="Возраст" />
                    <GridViewColumn DisplayMemberBinding="{Binding AboutMe}" Header="Обо мне" />
                    <GridViewColumn DisplayMemberBinding="{Binding IsVisited}" Header="Посещено" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
