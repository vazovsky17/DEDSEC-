<UserControl
    x:Class="DEDSEC.WPF.Components.PlayerListingComponent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:components="clr-namespace:DEDSEC.WPF.Components"
    xmlns:icon="http://metro.mahapps.com/winfx/xaml/iconpacks">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <!--  Search TextBox  -->
        <components:SearchComponent Grid.Row="0" HorizontalAlignment="Left" />
        <!--  Top Buttons  -->
        <Button
            Grid.Row="0"
            Margin="0,0,20,0"
            HorizontalAlignment="Right"
            Background="#dcdcdc"
            Style="{StaticResource topButton}">
            <icon:PackIconMaterial Kind="Cog" />
        </Button>

        <Button
            Grid.Row="0"
            Margin="0,0,55,0"
            HorizontalAlignment="Right"
            Style="{StaticResource topButton}">
            <icon:PackIconMaterial Kind="Bell" />
        </Button>

        <!--  Page Title  -->
        <TextBlock
            Grid.Row="1"
            Margin="0,20,0,0"
            HorizontalAlignment="Left"
            FontSize="32"
            FontWeight="SemiBold"
            Foreground="#121518"
            Text="Игроки" />

        <!--  Add Button  -->
        <Button Grid.Row="1" Style="{StaticResource addButton}">
            <StackPanel Orientation="Horizontal">
                <icon:PackIconMaterial
                    Width="12"
                    Height="12"
                    Margin="8,1,8,0"
                    VerticalAlignment="Center"
                    Kind="Plus" />
                <TextBlock Margin="0,0,8,0" Text="Добавить нового игрока" />
            </StackPanel>
        </Button>

        <!--  Separator  -->
        <Separator
            Grid.Row="3"
            Height="1"
            Margin="0,-1,0,8"
            Background="#dae2ae" />

        <!--  Tab Buttons  -->
        <StackPanel
            Grid.Row="2"
            Margin="0,8,0,0"
            Orientation="Horizontal">
            <Button
                BorderBrush="#784ff2"
                Content="Все"
                Style="{StaticResource tabButton}" />
            <Button Content="Игроки" Style="{StaticResource tabButton}" />
            <Button Content="Админы" Style="{StaticResource tabButton}" />
        </StackPanel>

        <!--  Counter Title  -->
        <TextBlock
            Grid.Row="4"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            FontSize="18"
            FontWeight="SemiBold"
            Foreground="#121518"
            Text="2 игрока" />

        <TextBlock
            Grid.Row="4"
            Margin="0,0,230,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            FontSize="18"
            FontWeight="SemiBold"
            Foreground="#121518"
            Text="Фильтровать по" />

        <!--  Filter Textbox  -->
        <components:FilterComponent Grid.Row="4" HorizontalAlignment="Right" />

        <!--  Players Datagrid  -->
        <DataGrid Grid.Row="5" >

        </DataGrid>

        <!--  Pagination Section  -->
        <Border
            Grid.Row="6"
            Margin="0,10,10,10"
            Padding="5"
            HorizontalAlignment="Right"
            Background="White"
            BorderBrush="#dee4ec"
            BorderThickness="1"
            CornerRadius="5">
            <StackPanel Orientation="Horizontal">
                <Button Style="{StaticResource pagingButton}">
                    <icon:PackIconMaterial Kind="ChevronLeft" Style="{StaticResource pagingButtonIcon}" />
                </Button>
                <Rectangle
                    Width="1"
                    Margin="3,7"
                    Fill="#dee4ec" />
                <Button
                    Background="#7950f2"
                    Content="1"
                    Foreground="#ffffff"
                    Style="{StaticResource pagingButton}" />
                <Button Content="2" Style="{StaticResource pagingButton}" />
                <Button Content="3" Style="{StaticResource pagingButton}" />
                <TextBlock
                    Margin="10,0"
                    VerticalAlignment="Center"
                    FontSize="15"
                    Foreground="#6c7682"
                    Text="..." />
                <Button Content="7" Style="{StaticResource pagingButton}" />
                <Button Content="8" Style="{StaticResource pagingButton}" />
                <Button Content="9" Style="{StaticResource pagingButton}" />
                <Rectangle
                    Width="1"
                    Margin="3,7"
                    Fill="#dee4ec" />
                <Button Style="{StaticResource pagingButton}">
                    <icon:PackIconMaterial Kind="ChevronRight" Style="{StaticResource pagingButtonIcon}" />
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
