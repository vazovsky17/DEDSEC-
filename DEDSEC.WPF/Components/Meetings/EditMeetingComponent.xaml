<UserControl
    x:Class="DEDSEC.WPF.Components.Meetings.EditMeetingComponent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:meetings_comp="clr-namespace:DEDSEC.WPF.Components.Meetings">
    <Grid Width="400" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            Margin="20"
            Style="{StaticResource textBlockTitle}"
            Text="Редактировать встречу" />
        <meetings_comp:MeetingFormComponent Grid.Row="1" DataContext="{Binding MeetingFormViewModel}" />
    </Grid>
</UserControl>
