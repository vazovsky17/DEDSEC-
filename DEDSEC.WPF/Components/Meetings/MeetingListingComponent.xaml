<UserControl
    x:Class="DEDSEC.WPF.Components.MeetingListingComponent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <TextBlock FontSize="28" Text="Встречи" />
            <Button
                Margin="10,0,0,0"
                Padding="10,5"
                VerticalAlignment="Center"
                Visibility="{Binding IsAdmin, Converter={StaticResource BooleanToVisibilityConverter}}"
                Command="{Binding AddMeetingCommand}"
                Content="Добавить встречу" />
        </StackPanel>

        <ListView
            Grid.Row="1"
            Margin="0,20,0,0"
            ItemsSource="{Binding Meetings}">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Title}" Header="Название" />
                    <GridViewColumn DisplayMemberBinding="{Binding Description}" Header="Описание" />
                    <GridViewColumn DisplayMemberBinding="{Binding DateBegin}" Header="Дата начала" />
                    <GridViewColumn DisplayMemberBinding="{Binding DateEnd}" Header="Дата конца" />
                    <GridViewColumn DisplayMemberBinding="{Binding MaxCountVisitors}" Header="Максимум игроков" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
