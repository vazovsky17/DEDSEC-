<UserControl
    x:Class="DEDSEC.WPF.Components.Accounts.EditAccountComponent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:accounts_comp="clr-namespace:DEDSEC.WPF.Components.Accounts">
    <Grid Width="400" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock
            Grid.Row="0"
            Margin="20"
            Style="{StaticResource textBlockTitle}"
            Text="Редактировать аккаунт" />
        <accounts_comp:AccountFormComponent Grid.Row="1" DataContext="{Binding AccountFormViewModel}" />
    </Grid>
</UserControl>
